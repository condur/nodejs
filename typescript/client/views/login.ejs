<!DOCTYPE html>
<html>

<head>
    <title>Login | NodeJS Typescript</title>
    <!-- Google Lato font -->
    <link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" type="text/css" href="/typescript/css/bootstrap.min.css" />
    <!-- Custom styles  -->
    <link rel="stylesheet" type="text/css" href="/typescript/css/style.css" />
</head>

<body>
  <div class="auth-login">
    <div class="auth-container">
      <div class="card">
        <div class="auth-content">
          <p class="text-center">
            LOGIN PAGE
          </p>
          <br />
          <form action="/typescript/login" method="post">
            <div id="group-username" class="form-group">
              <label for="username">Username</label>
              <input type="text" name="username" class="form-control underlined"
              placeholder="Your user name" />
              <span class="has-error hidden">Please enter your username</span>
            </div>
            <div id="group-password" class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" class="form-control underlined"
              placeholder="Your password" />
              <span class="has-error hidden">Please enter your password</span>
            </div>
            <div class="form-group">
              <input type="submit" value="Login" class="btn btn-block btn-primary" />
            </div>
            <div class="form-group">
              <p class="text-muted text-center">
                Not a member?
                <a href="/typescript/register">Create new account</a>
              </p>
            </div>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
              <div class="alert alert-danger">
                <%= message %>
              </div>
              <% } %>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- JQuery and Login JavaScript -->
  <script type="text/javascript" src="/typescript/js/lib/jquery-3.3.1.min.js"></script>
  <script type="text/javascript" src="/typescript/js/login_register.js"></script>
</body>

</html>
